        function loadTeachersForSubstitute(subject) {
            // Get the current adjustment to get the date and slot
            if (!currentAdjustmentId) {
                console.error('No current adjustment ID');
                return;
            }
            
            // Find the adjustment details from the table
            const adjustmentRow = document.querySelector(`[data-adjustment-id="${currentAdjustmentId}"]`);
            if (!adjustmentRow) {
                console.error('Adjustment row not found');
                return;
            }
            
            // Get date and slot from data attributes
            const slot = adjustmentRow.getAttribute('data-slot');
            const date = adjustmentRow.getAttribute('data-date');
            
            // Build URL with subject, date, and slot parameters
            let url = '/api/teachers';
            const params = new URLSearchParams();
            if (subject) params.append('subject', subject);
            if (date) params.append('date', date);
            if (slot) params.append('slot', slot);
            
            if (params.toString()) {
                url += '?' + params.toString();
            }
            
            fetch(url, { credentials: 'include' })
                .then(res => res.json())
                .then(teachers => {
                    const select = document.getElementById('substituteTeacher');
                    select.innerHTML = '<option value="">Select Teacher</option>';
                    
                    if (teachers.length === 0) {
                        select.innerHTML = '<option value="">No teachers available</option>';
                        return;
                    }
                    
                    teachers.forEach(teacher => {
                        const option = document.createElement('option');
                        option.value = teacher.username || teacher.email;
                        option.textContent = `${teacher.username || teacher.email} (${teacher.subject || 'Unknown Subject'})`;
                        select.appendChild(option);
                    });
                })
                .catch(err => {
                    console.error('Error loading teachers for substitute:', err);
                    const select = document.getElementById('substituteTeacher');
                    select.innerHTML = '<option value="">Error loading teachers</option>';
                });
        }
        
