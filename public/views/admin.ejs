            }
            
            fetch(`/api/lectures?teacher=${teacher}`, { credentials: 'include' })
                .then(res => res.json())
                .then(lectures => {
                    populateTimetable(lectures);
                })
                .catch(err => {
                    console.error('Error filtering lectures:', err);
                });
        }
        
